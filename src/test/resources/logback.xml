<configuration>

  <appender name="FILE" class="ch.qos.logback.core.FileAppender">
    <file>target/test.log</file>

    <encoder>
      <pattern>%date %level [%thread] %logger{36} %msg%n</pattern>
    </encoder>
  </appender>

  <root level="debug">
    <appender-ref ref="FILE" />
  </root>

</configuration>

